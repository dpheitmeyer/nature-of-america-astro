  }

  header .page-title {
    grid-area: page-title;
    margin: 0;
    font-size: 3vw;
    padding-top: 0.5rem;
  }

  header nav {
    grid-area: nav;
    justify-self: end;
    align-self: center;
  }

  main p {
    line-height: 1.5;
  }
  h3 {
    margin-top: 4rem;
  }
